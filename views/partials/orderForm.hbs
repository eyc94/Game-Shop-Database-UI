<!-- Customer ID -->
<div class="row">
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="customerID">Customer ID: </label>
        <select class="form-select form-select-sm" name="customerID" id="customerID">
            <option value={{orderInfo.customerID}}>{{orderInfo.customerID}}</option>
            {{#each customers}}
            <option value={{this.customerID}}>{{this.customerID}} {{this.firstName}} {{this.lastName}}</option>
            {{/each}}
        </select>
    </div>
</div>

<!-- Order Date -->
<div class="row">
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="orderDate">Order Date: </label>
        <input class="form-control form-control-sm" type="date" id="orderDate" name="orderDate"
            value={{orderInfo.orderDate}}>
    </div>
</div>

<!-- Pickup -->
<div class="row">
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="pickup">Pickup/Delivery: </label>
        <select class="form-select form-select-sm" name="pickup" id="pickup" value={{orderInfo.pickup}}>
            <option value={{orderInfo.pickup}}>{{orderInfo.pickup}}</option>
            <option value="1">Pickup</option>
            <option value="0">Delivery</option>
        </select>
    </div>
</div>

<!-- Submit Button -->
<div class="row">
    <div class="mb-5">
        <button class="btn btn-sm btn-outline-primary" type="submit">Submit</button>
    </div>
</div>
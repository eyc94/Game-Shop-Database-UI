<div class="row">
    <!-- Order ID -->
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="orderID">Order ID: </label>
        <input class="form-control form-control-sm" type="text" id="orderID" name="orderID" value={{this.orderID}}>
    </div>

    <!-- Product ID -->
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="productID">Product ID: </label>
        <input class="form-control form-control-sm" type="text" id="productID" name="productID"
            value={{this.productID}}>
    </div>

    <!-- Quantity -->
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="quantity">Quantity: </label>
        <input class="form-control form-control-sm" type="text" id="quantity" name="quantity" value={{this.quantity}}>
    </div>
</div>

<!-- Submit Button -->
<div class="row">
    <div class="mb-5 col-sm-3">
        <button class="btn btn-sm btn-outline-secondary" type="submit">Submit</button>
    </div>
</div>
<div class="row">
    <!-- Product Name -->
    <div class="mb-1 col-sm-3">
        <label for="productName" class="form-label">Product Name: </label>
        <input class="form-control form-control-sm" type="text" id="productName" name="productName"
            value={{this.productName}}>
    </div>

    <!-- Price -->
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="price">Price: </label>
        <input class="form-control form-control-sm" type="text" id="price" name="price" value={{this.price}}>
    </div>

    <!-- Publisher -->
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="publisher">Publisher: </label>
        <input class="form-control form-control-sm" type="text" id="publisher" name="publisher"
            value={{this.publisher}}>
    </div>
</div>

<div class="row">
    <!-- Genre -->
    <div class="mb-1 col-sm-3">
        <label class="form-label" for="genre">Genre: </label>
        <input class="form-control form-control-sm" type="text" id="genre" name="genre" value={{this.genre}}>
    </div>

    <!-- Submit Button -->
    <div class="mb-5">
        <button type="submit" class="btn btn-sm btn-outline-secondary">Submit</button>
    </div>
</div>
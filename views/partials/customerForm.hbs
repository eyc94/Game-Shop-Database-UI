<!-- First Name -->
<div>
    <label for="firstName">First Name: </label>
    <input type="text" id="firstName" name="firstName" value={{this.firstName}}>
</div>

<!-- Last Name -->
<div>
    <label for="lastName">Last Name: </label>
    <input type="text" id="lastName" name="lastName" value={{this.lastName}}>
</div>

<!-- Email -->
<div>
    <label for="email">Email: </label>
    <input type="email" id="email" name="email" value={{this.email}}>
</div>

<!-- Phone Number -->
<div>
    <label for="phoneNumber">Phone Number: </label>
    <input type="text" id="phoneNumber" name="phoneNumber" value={{this.phoneNumber}}>
</div>

<!-- Address -->
<div>
    <label for="address">Address: </label>
    <input type="text" id="address" name="address" value={{this.address}}>
</div>

<!-- Submit Button -->
<div>
    <button type="submit">Submit</button>
</div>
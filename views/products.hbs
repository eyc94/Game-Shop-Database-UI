    <h1 class="text-center">Products</h1>

    <h3>Add Product</h3>

    {{!-- Form to add products --}}
    <form id="addProductForm" method="POST" action="/products/addProduct">
        {{> productForm}}
    </form>

    <h3>Existing Products</h3>

    {{!-- Create a table --}}
    <table id="productsTable" class="table table-striped table-hover table-bordered">

        {{!-- Header section --}}
        <thead>
            {{!-- The first row has the key printed of each object as a header cell. --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>
            {{!-- Print the productID, productName, price, publisher, genre --}}
            {{#each data}}
            <tr>
                <td>{{this.productID}}</td>
                <td>{{this.productName}}</td>
                <td>{{this.price}}</td>
                <td>{{this.publisher}}</td>
                <td>{{this.genre}}</td>
                <td><a class="btn btn-sm btn-outline-secondary"
                        href="/products/editProduct/{{this.productID}}">Update</a></td>
                <td><a class="btn btn-sm btn-outline-secondary" href="/products/{{this.productID}}">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>